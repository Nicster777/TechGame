          <argument>
            <kind>1</kind>
            <string>// get player's input
keyRight = keyboard_check(ord("D"))
keyLeft = -keyboard_check(ord("A"))
keyJump = keyboard_check_pressed(vk_space);

// react to inputs
move = keyRight + keyLeft;
hsp = move * movespeed;
if (vsp &lt; 10) vsp += grav;

switch (keyboard_key)
{
    case vk_right: facing = 1; break;
    case vk_left: facing = -1; break;
}
 

if (place_meeting(x,y+1,oGround))
{
    vsp  = keyJump * -jumpspeed;
}

// horizontal collision
if (place_meeting(x+hsp,y,oGround))
{
    while(!place_meeting(x+sign(hsp),y,oGround))
    {
        x += sign(hsp);
    }
    hsp = 0;
    
}
x += hsp;

// vertical collision
if (place_meeting(x,y+vsp,oGround))
{
    while(!place_meeting(x,y+sign(vsp),oGround))
    {
        y += sign(vsp);
    }
    vsp = 0;
    
}
y += vsp;

// view in room
view_xview[0] = x - (view_wview[0]/2);
view_yview[0] = y - (view_hview[0]/2);

// room checking
if (facing == 1)
{
    if (x &gt;= (global.length / 2) &amp;&amp; canCreate)
    {
        canCreate = false;
        global.length = scrGenerate(global.length);
        canCreate = true;
    }
} 
else if (facing == -1)
{
    if (x &lt;= (global.length2 / 2) &amp;&amp; canCreate)
    {
        canCreate = false;
        global.length2 = scrGenerate(global.length2 - 3200);
        canCreate = true;
    }
}

</string>
